<Page x:Class="MoneyFlow.WPF.Views.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyFlow.WPF.Views.Pages" 
      xmlns:fa="http://schemas.fontawesome.com/icons/" 
      xmlns:pageviewmodels="clr-namespace:MoneyFlow.WPF.ViewModels.PageViewModels" 
      d:DataContext="{d:DesignInstance Type=pageviewmodels:UserPageVM}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border>
            <StackPanel>
                <Border CornerRadius="0 20 0 20" BorderThickness="1" BorderBrush="Black" Background="White" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="300"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10 10 0 10">
                        <!--#region Аватар -->
                        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10">
                            <StackPanel>
                                <Border BorderThickness="0 0 0 2" BorderBrush="Black">
                                    <Image Source="{Binding SelectImage}" d:Source="/Res/Kotozila.jpg" Width="100" Height="100" Margin="5"/>
                                </Border>
                                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 2 0 4">
                                    <Button Background="#00DDDDDD" BorderBrush="#00707070" HorizontalAlignment="Left" Command="{Binding SelectedImageCommand}">
                                        <fa:ImageAwesome Icon="Regular_FileImage" Width="10" Foreground="#FF3053C2"/>
                                    </Button>
                                    <Button Background="#00DDDDDD" BorderBrush="#00707070" HorizontalAlignment="Right" Margin="10 0 0 0" Command="{Binding ClearImageCommand}">
                                        <fa:ImageAwesome Icon="Solid_TrashAlt" Width="10" Foreground="#FFDD3D3D"/>
                                    </Button>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                        <!--#endregion-->

                        <!--#region Общая информация -->
                        <Border>
                            <StackPanel>
                                <DataGrid ItemsSource="{Binding Accounts}"/>
                                <DataGrid ItemsSource="{Binding AccountTypes}"/>
                                <DataGrid ItemsSource="{Binding Banks}"/>
                                <DataGrid ItemsSource="{Binding UserBanks.Banks}" FontSize="15"/>
                            </StackPanel>
                        </Border>
                        <!--#endregion-->
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </ScrollViewer>
        
</Page>
