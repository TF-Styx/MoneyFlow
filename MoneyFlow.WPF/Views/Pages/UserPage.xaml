<Page x:Class="MoneyFlow.WPF.Views.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoneyFlow.WPF.Views.Pages" 
      xmlns:fa="http://schemas.fontawesome.com/icons/" 
      xmlns:pageviewmodels="clr-namespace:MoneyFlow.WPF.ViewModels.PageViewModels" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
      d:DataContext="{d:DesignInstance Type=pageviewmodels:UserPageVM}"
      mc:Ignorable="d"
      Title="UserPage"
      d:Width="800" d:Height="auto"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border MaxWidth="1920">
            <StackPanel>
                
                <!--#region Шапка профиля -->
                <Border CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="300"/>
                    </Border.Effect>
                    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
                        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Stretch">
                            <!--#region Аватар -->
                            <DockPanel HorizontalAlignment="Left">
                                <Border BorderBrush="Black" BorderThickness="1">
                                    <StackPanel>
                                        <Border BorderThickness="0 0 0 0" BorderBrush="Black">
                                            <!--BorderThickness="0 0 0 2"-->
                                            <Image Source="{Binding SelectImage}" Width="100" Height="100" Margin="5"/>
                                        </Border>
                                        <!--<WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 2 0 4">
                                            <Button Background="#00DDDDDD" BorderBrush="#00707070" HorizontalAlignment="Left" Command="{Binding SelectedImageCommand}">
                                                <fa:ImageAwesome Icon="Regular_FileImage" Width="10" Foreground="#FF3053C2"/>
                                            </Button>
                                            <Button Background="#00DDDDDD" BorderBrush="#00707070" HorizontalAlignment="Right" Margin="10 0 0 0" Command="{Binding ClearImageCommand}">
                                                <fa:ImageAwesome Icon="Solid_TrashAlt" Width="10" Foreground="#FFDD3D3D"/>
                                            </Button>
                                        </WrapPanel>-->
                                    </StackPanel>
                                </Border>
                            </DockPanel>
                            <!--#endregion-->

                            <!--#region Информация пользователя -->
                            <DockPanel HorizontalAlignment="Right" Margin="50 0 0 0">
                                <TextBlock Text="{Binding CurrentUser.UserName}" d:Text="UserName" DockPanel.Dock="Top" FontSize="30"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                                    <TextBlock Text="{Binding City}" d:Text="City" Margin="0 0 20 0"/>
                                    <TextBlock Text="{Binding DetailedInformation}" d:Text="DetailedInformation"/>
                                </StackPanel>
                            </DockPanel>
                            <!--#endregion-->
                        </DockPanel>

                        <!--#region Действия пользователя -->
                        <DockPanel>
                            <StackPanel HorizontalAlignment="Right" DockPanel.Dock="Top">
                                <Button Content="Редактировать профиль" Width="200" Height="30" FontSize="15"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Menu HorizontalAlignment="Right" Background="Transparent" FontSize="15" Margin="0 10 0 0">
                                    <MenuItem Header="Пользователь↓">
                                        <MenuItem Header="Банки" Command="{Binding OpenBankPageCommand}"/>
                                        <MenuItem Header="Счета" Command="{Binding OpenAccountPageCommand}"/>
                                        <MenuItem Header="Тпы счетов" Command="{Binding OpenAccountTypePageCommand}"/>
                                        <MenuItem Header="Категории / Подкатегории" Command="{Binding OpenCatAndSubPageCommand}"/>
                                        <Separator/>
                                        <MenuItem Header="Журнал финансов" Command="{Binding OpenFinancialRecordPageCommand}"/>
                                    </MenuItem>
                                </Menu>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" DockPanel.Dock="Bottom">
                                <Button Content="↑↓" Width="30" Height="30"/>
                            </StackPanel>
                        </DockPanel>
                        <!--#endregion-->
                    </DockPanel>
                </Border>
                <!--#endregion-->

                <!--#region Уменьшенная шапка профиля -->
                <!--<Border CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="300"/>
                    </Border.Effect>
                    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
                        <DockPanel HorizontalAlignment="Left" VerticalAlignment="Stretch">
                            --><!--#region Аватар --><!--
                            <DockPanel HorizontalAlignment="Left">
                                <Border BorderBrush="Black" BorderThickness="1">
                                    <StackPanel>
                                        <Border BorderThickness="0 0 0 0" BorderBrush="Black">
                                            --><!--BorderThickness="0 0 0 2"--><!--
                                            <Image Source="{Binding SelectImage}" Width="30" Height="30" Margin="5"/>
                                        </Border>
                                        --><!--<WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 2 0 4">
                                            <Button Background="#00DDDDDD" BorderBrush="#00707070" HorizontalAlignment="Left" Command="{Binding SelectedImageCommand}">
                                                <fa:ImageAwesome Icon="Regular_FileImage" Width="10" Foreground="#FF3053C2"/>
                                            </Button>
                                            <Button Background="#00DDDDDD" BorderBrush="#00707070" HorizontalAlignment="Right" Margin="10 0 0 0" Command="{Binding ClearImageCommand}">
                                                <fa:ImageAwesome Icon="Solid_TrashAlt" Width="10" Foreground="#FFDD3D3D"/>
                                            </Button>
                                        </WrapPanel>--><!--
                                    </StackPanel>
                                </Border>
                            </DockPanel>
                            --><!--#endregion-->

                            <!--#region Информация пользователя --><!--
                            <TextBlock Text="{Binding UserName}" d:Text="UserName" 
                                       HorizontalAlignment="Right" VerticalAlignment="Center" 
                                       Margin="50 0 0 0" FontSize="20"/>
                            --><!--#endregion--><!--
                        </DockPanel>

                        --><!--#region Действия пользователя --><!--
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Top">
                            <Menu Background="Transparent" FontSize="15" Height="25">
                                <MenuItem Header="Пользователь↓" FontSize="15">
                                    <MenuItem Header="Профиль" Command="{Binding OpenProfileUserPageCommand}"/>
                                    <MenuItem Header="Банки" Command="{Binding OpenBankPageCommand}"/>
                                    <MenuItem Header="Счета" Command="{Binding OpenAccountPageCommand}"/>
                                    <MenuItem Header="Категории / Подкатегории" Command="{Binding OpenCatAndSubPageCommand}"/>
                                    <MenuItem Header="Журнал финансов" Command="{Binding OpenFinancialRecordPageCommand}"/>
                                </MenuItem>
                            </Menu>
                            <Button Content="↑↓" Width="30" Height="30"/>
                        </StackPanel>
                        --><!--#endregion--><!--
                    </DockPanel>
                </Border>-->
                <!--#endregion-->

                <!--#region Общая информация || Счета -->
                <Border CornerRadius="0" MaxHeight="300" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="300"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <!--#region Общая информация -->
                        <Border Grid.Column="0" CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="0 0 5 0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Direction="300"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Общая информация" HorizontalAlignment="Center" FontSize="15"/>
                                <Border>
                                    <StackPanel Margin="10">
                                        <DockPanel>
                                            <TextBlock Text="Gender" Margin="0 0 20 0" Width="150"/>
                                            <TextBlock Text="{Binding UserTotalInfo.GenderName}" d:Text="Man" Width="150"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="TotalBalace" Margin="0 0 20 0" Width="150"/>
                                            <TextBlock Text="{Binding UserTotalInfo.TotalBalance}" d:Text="193592" Width="150"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="AccountCount" Margin="0 0 20 0" Width="150"/>
                                            <TextBlock Text="{Binding UserTotalInfo.AccountCount}" d:Text="7" Width="150"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="BankCount" Margin="0 0 20 0" Width="150"/>
                                            <TextBlock Text="{Binding UserTotalInfo.BankCount}" d:Text="3" Width="150"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="CategoryCount" Margin="0 0 20 0" Width="150"/>
                                            <TextBlock Text="{Binding UserTotalInfo.CategoryCount}" d:Text="15" Width="150"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="SubcategoryCount" Margin="0 0 20 0" Width="150"/>
                                            <TextBlock Text="{Binding UserTotalInfo.SubcategoryCount}" d:Text="36" Width="150"/>
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="FinancialRecordCount" Margin="0 0 20 0" Width="150"/>
                                            <TextBlock Text="{Binding UserTotalInfo.FinancialRecordCount}" d:Text="206" Width="150"/>
                                        </DockPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                        <!--#endregion-->

                        <!--#region Счета -->
                        <Border Grid.Column="1" CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="5 0 0 0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Direction="300"/>
                            </Border.Effect>
                            <Grid>
                                <DockPanel>
                                    <TextBlock Text="Счета" DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="15"/>
                                    <DataGrid AutoGenerateColumns="False"
                                              IsReadOnly="True"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              RowHeaderWidth="0"
                                              SelectionMode="Single"
                                              VerticalAlignment="Top"
                                              ItemsSource="{Binding Accounts}" 
                                              d:ItemsSource="{d:SampleData ItemCount=15}"
                                              SelectedItem="{Binding SelectedAccount}"
                                              Margin="10">
                                        <!--#region DoubleClick -->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDoubleClick">
                                                <i:InvokeCommandAction Command="{Binding AccountDoubleClickCommand}" CommandParameter="{Binding SelectedAccount}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <!--#endregion-->

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Id" Binding="{Binding IdAccount}" Width="20"/>
                                            <DataGridTextColumn Header="NumberAccount" Binding="{Binding NumberAccount}" Width="*"/>
                                            <DataGridTextColumn Header="Balance" Binding="{Binding Balance}" Width="*"/>
                                            <DataGridTextColumn Header="Bank" Binding="{Binding Bank.BankName}" Width="*"/>
                                            <DataGridTextColumn Header="AccountType" Binding="{Binding AccountType.AccountTypeName}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Grid>
                        </Border>
                        <!--#endregion-->
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Банки пользователя || Типы счетов -->
                <Border CornerRadius="0" MaxHeight="300" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="300"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--#region Банки пользователя -->
                        <Border Grid.Column="0" CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="0 0 5 0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Direction="300"/>
                            </Border.Effect>
                            <Grid>
                                <DockPanel>
                                    <TextBlock Text="Банки пользователя" DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="15"/>
                                    <DataGrid AutoGenerateColumns="False" 
                                              IsReadOnly="True"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              RowHeaderWidth="0"
                                              SelectionMode="Single" 
                                              ItemsSource="{Binding UserBanks.Banks}" 
                                              d:ItemsSource="{d:SampleData ItemCount=15}"
                                              SelectedItem="{Binding SelectedUserBank}"
                                              Margin="10">
                                        <!--#region DoubleClick -->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDoubleClick">
                                                <i:InvokeCommandAction Command="{Binding UserBankDoubleClickCommand}" CommandParameter="{Binding SelectedUserBank}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <!--#endregion-->

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Bank" Binding="{Binding IdBank}" Width="20"/>
                                            <DataGridTextColumn Header="BankName" Binding="{Binding BankName}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Grid>
                        </Border>
                        <!--#endregion-->

                        <!--#region Типы счетов -->
                        <Border Grid.Column="1" CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="5 0 0 0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Direction="300"/>
                            </Border.Effect>
                            <Grid>
                                <DockPanel>
                                    <TextBlock Text="Тип счета пользователя" DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="15"/>
                                    <DataGrid AutoGenerateColumns="False" 
                                              IsReadOnly="True"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              RowHeaderWidth="0"
                                              SelectionMode="Single" 
                                              VerticalAlignment="Top"
                                              ItemsSource="{Binding UserAccountTypes.AccountTypes}" 
                                              d:ItemsSource="{d:SampleData ItemCount=15}"
                                              SelectedItem="{Binding SelectedUserAccountType}"
                                              Margin="10">
                                        <!--#region DoubleClick -->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDoubleClick">
                                                <i:InvokeCommandAction Command="{Binding UserAccountTypeDoubleClickCommand}" CommandParameter="{Binding SelectedUserAccountType}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <!--#endregion-->

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Id" Binding="{Binding IdAccountType}" Width="20"/>
                                            <DataGridTextColumn Header="AccountTypeName" Binding="{Binding AccountTypeName}" Width="*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Grid>
                        </Border>
                        <!--#endregion-->
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Категории || Подкатегории -->
                <Border CornerRadius="0" MaxHeight="300" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="300"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!--#region Категории -->
                        <Border Grid.Column="0" CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="0 0 5 0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Direction="300"/>
                            </Border.Effect>
                            <Grid>
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Top">
                                        <TextBlock Text="Категории" HorizontalAlignment="Center" FontSize="15"/>
                                        <Button Content="Сбросить выделение" HorizontalAlignment="Center" Margin="2"
                                                Command="{Binding AllSubCommand}"/>
                                    </StackPanel>
                                    <DataGrid AutoGenerateColumns="False" 
                                              IsReadOnly="True"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              RowHeaderWidth="0"
                                              SelectionMode="Single" 
                                              VerticalAlignment="Top"
                                              ItemsSource="{Binding Categories}" 
                                              d:ItemsSource="{d:SampleData ItemCount=15}"
                                              SelectedItem="{Binding SelectedCategory}"
                                              Margin="10">
                                        <!--#region DoubleClick -->
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDoubleClick">
                                                <i:InvokeCommandAction Command="{Binding UserCategoryDoubleClickCommand}" CommandParameter="{Binding SelectedCategory}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                        <!--#endregion-->

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Id" Binding="{Binding IdCategory}" Width="20"/>
                                            <DataGridTextColumn Header="CategoryName" Binding="{Binding CategoryName}" Width="auto"/>
                                            <DataGridTemplateColumn Header="Decription" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Description}" HorizontalAlignment="Left" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Grid>
                        </Border>
                        <!--#endregion-->

                        <!--#region Подкатегории -->
                        <Border Grid.Column="1" CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="5 0 0 0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Direction="300"/>
                            </Border.Effect>
                            <Grid>
                                <DockPanel>
                                    <TextBlock Text="Подкатегории" HorizontalAlignment="Center" DockPanel.Dock="Top" FontSize="15"/>
                                    <DataGrid AutoGenerateColumns="False" 
                                              IsReadOnly="True"
                                              GridLinesVisibility="None"
                                              HeadersVisibility="Column"
                                              RowHeaderWidth="0"
                                              SelectionMode="Single" 
                                              VerticalAlignment="Top"
                                              ItemsSource="{Binding Subcategories}" 
                                              d:ItemsSource="{d:SampleData ItemCount=15}"
                                              SelectedItem="{Binding SelectedSubcategory}"
                                              Margin="10">
                                        <!--#region DoubleClick -->
                                        <!--<i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseDoubleClick">
                                                <i:InvokeCommandAction Command="{Binding UserSubcategoryTypeDoubleClickCommand}" CommandParameter="{Binding SelectedSubcategory}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>-->
                                        <!--#endregion-->

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Id" Binding="{Binding IdSubcategory}" Width="20"/>
                                            <DataGridTextColumn Header="SubcategoryName" Binding="{Binding SubcategoryName}" Width="auto"/>
                                            <DataGridTemplateColumn Header="Decription" Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Description}" HorizontalAlignment="Left" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Grid>
                        </Border>
                        <!--#endregion-->
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region Финансовые записи -->
                <Border CornerRadius="0" MaxHeight="500" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Direction="300"/>
                    </Border.Effect>
                    <Grid>
                        <DockPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
                                <TextBlock Text="Финансовые записи" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
                                <Button x:Name="btnFilter" DockPanel.Dock="Top" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                        Background="Transparent" BorderThickness="0" 
                                        Width="25" Height="25" Margin="20 0 0 0"
                                        Command="{Binding OpenPopupFilterCommand}">
                                    <StackPanel>
                                        <fa:ImageAwesome Icon="Solid_Filter" Foreground="Gray"/>
                                        <Popup IsOpen="{Binding IsOpenPopupFilter}" 
                                               PlacementTarget="{Binding ElementName=btnFilter}"
                                               Placement="Right" StaysOpen="False" AllowsTransparency="True">
                                            <Border Width="320" CornerRadius="0" BorderThickness="0.1" BorderBrush="Black" Background="White" Margin="5 10 5 5">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="10" Direction="300"/>
                                                </Border.Effect>
                                                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                    <DockPanel DockPanel.Dock="Top">
                                                        <TextBlock Text="Фильтрация" HorizontalAlignment="Center" DockPanel.Dock="Top" FontSize="15"/>
                                                        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
                                                            <StackPanel DockPanel.Dock="Top">
                                                                <DockPanel Margin="0 0 0 20">
                                                                    <DockPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                                                        <TextBlock Text="Amount" DockPanel.Dock="Top"/>
                                                                        <DockPanel Margin="0 5 0 0">
                                                                            <TextBlock Text="Consider"/>
                                                                            <CheckBox IsChecked="{Binding IsConsiderAmount}" VerticalAlignment="Center" Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                    </DockPanel>
                                                                    <DockPanel HorizontalAlignment="Right">
                                                                        <DockPanel DockPanel.Dock="Top">
                                                                            <TextBlock Text="От" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                            <TextBox Text="{Binding AmountStartFilter}" 
                                                                                     HorizontalAlignment="Right"
                                                                                     Width="150" Height="25"  Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                        <DockPanel  Margin="0 20 0 0">
                                                                            <TextBlock Text="До" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                            <TextBox Text="{Binding AmountEndFilter}" 
                                                                                     HorizontalAlignment="Right"
                                                                                     Width="150" Height="25" Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                    </DockPanel>
                                                                </DockPanel>
                                                                <DockPanel Margin="0 0 0 10">
                                                                    <TextBlock Text="TransactionType" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                    <ComboBox ItemsSource="{Binding TransactionTypesFilter}" 
                                                                              SelectedItem="{Binding SelectedTransactionTypeFilter}"
                                                                              DisplayMemberPath="TransactionTypeName"
                                                                              HorizontalAlignment="Right"
                                                                              Width="150" Height="25"/>
                                                                </DockPanel>
                                                                <DockPanel Margin="0 0 0 10">
                                                                    <TextBlock Text="Category" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                    <ComboBox ItemsSource="{Binding CategoriesFilter}" 
                                                                              SelectedItem="{Binding SelectedCategoryFilter}"
                                                                              DisplayMemberPath="CategoryName"
                                                                              HorizontalAlignment="Right"
                                                                              Width="150" Height="25"/>
                                                                </DockPanel>
                                                                <DockPanel Margin="0 0 0 20">
                                                                    <TextBlock Text="Account" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                    <ComboBox ItemsSource="{Binding AccountsFilter}" 
                                                                              SelectedItem="{Binding SelectedAccountFilter}"
                                                                              DisplayMemberPath="NumberAccount"
                                                                              HorizontalAlignment="Right"
                                                                              Width="150" Height="25"/>
                                                                </DockPanel>
                                                                <DockPanel Margin="0 0 0 20">
                                                                    <DockPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                                                                        <TextBlock Text="Amount" DockPanel.Dock="Top"/>
                                                                        <DockPanel Margin="0 5 0 0">
                                                                            <TextBlock Text="Consider"/>
                                                                            <CheckBox IsChecked="{Binding IsConsiderDate}" VerticalAlignment="Center" Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                    </DockPanel>
                                                                    <DockPanel HorizontalAlignment="Right">
                                                                        <DockPanel DockPanel.Dock="Top">
                                                                            <TextBlock Text="От" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                            <DatePicker SelectedDate="{Binding DateStartFilter}" 
                                                                                        HorizontalAlignment="Right"
                                                                                        Width="150" Height="25"  Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                        <DockPanel  Margin="0 20 0 0">
                                                                            <TextBlock Text="До" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                            <DatePicker SelectedDate="{Binding DateEndFilter}" 
                                                                                        HorizontalAlignment="Right"
                                                                                        Width="150" Height="25" Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                    </DockPanel>
                                                                </DockPanel>
                                                                <DockPanel Margin="0 0 0 10">
                                                                    <TextBlock Text="Sorting" DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                                                    <ComboBox ItemsSource="{Binding Accounts}" 
                                                                              SelectedItem="{Binding SelectedAccount}"
                                                                              DisplayMemberPath="CNumberAccount"
                                                                              HorizontalAlignment="Right"
                                                                              Width="150" Height="25"/>
                                                                </DockPanel>

                                                                <Button Content=" Применить" FontSize="15" Command="{Binding ApplyCommand}"/>
                                                                <Button Content=" Сбросить фильтр" FontSize="15" Margin="0 10 0 0" Command="{Binding DropCommand}"/>
                                                            </StackPanel>
                                                        </DockPanel>
                                                    </DockPanel>
                                                </DockPanel>
                                            </Border>
                                        </Popup>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <DataGrid AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column"
                                      RowHeaderWidth="0"
                                      SelectionMode="Single" 
                                      VerticalAlignment="Top"
                                      ItemsSource="{Binding FinancialRecords}" 
                                      d:ItemsSource="{d:SampleData ItemCount=15}"
                                      SelectedItem="{Binding SelectedFinancialRecord}"
                                      Margin="10">
                                <!--#region DoubleClick -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDoubleClick">
                                        <i:InvokeCommandAction Command="{Binding UserFinancialRecordDoubleClickCommand}" CommandParameter="{Binding SelectedFinancialRecord}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <!--#endregion-->
                                
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Id" Binding="{Binding IdFinancialRecord}" Width="20"/>
                                    
                                    <DataGridTemplateColumn Header="RecordName || Amount" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DockPanel>
                                                    <TextBlock Text="{Binding RecordName}" DockPanel.Dock="Top"/>
                                                    <TextBlock Text="{Binding Amount}"/>
                                                </DockPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    
                                    <DataGridTemplateColumn Header="Decription" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Description}" HorizontalAlignment="Left" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="TransactionTypeName" Binding="{Binding TransactionTypeName}"  Width="*"/>

                                    <DataGridTemplateColumn Header="CategoryName || SubcategoryName" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <DockPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding CategoryName}" DockPanel.Dock="Top"/>
                                                    <TextBlock Text="{Binding SubcategoryName.Count}" DockPanel.Dock="Top"/>
                                                    <!--<ListView ItemsSource="{Binding SubcategoryName}"/>-->
                                                </DockPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="AccountNumber" Binding="{Binding AccountNumber}" Width="*"/>
                                    <DataGridTextColumn Header="Date" Binding="{Binding Date, Converter={StaticResource DateConverter}}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Grid>
                </Border>
                <!--#endregion-->
                
            </StackPanel>
        </Border>
    </ScrollViewer>

</Page>
